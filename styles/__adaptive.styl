			& .services__item:nth-of-type(even) {
				background-color: #fff;
			}
		}

		& .left-top-side {
			margin-bottom: 0;
		}
	}

	.services__item {
		width: 50%;
	}

	.services__container .left-top-side, .services__container .services__info {
		height: auto;
	}

	.services__text {
		padding: 20px 0 20px 0;
	}

	.master {
		padding-top: 40px;
		margin-bottom: 40px;
	}

	.master__text {
		padding: 30px;
		height: 300px;
	}

	.master__image {
		//height: 100%;
		//vertical-align: middle;
	}

	.master__text::before {
		left: -80px;
		bottom: 95px;
	}

	.brands {
		padding-top: 40px;
	}

	.brands__buttons {
		top: 15px;
	}

	.embla {
		margin-bottom: 40px;
	}

	.quiz__wrapper {
		padding-top: 40px;
		padding-bottom: 40px;
	}

	.quiz__page {
		padding: 25px 30px;
		height: 400px;
	}

	.quiz__options {
		//flex-direction: column;
	}

	.quiz__radio {
		width: 33%;
		//min-width: 33%;
	}

	.quiz__hot_1 .quiz__radio {
		width: 25%;
	}

	.quiz__image {
		width: 100%;
		height: 120px;
		padding: 20px;

		& img {
			//width: 90%;
			//object-size: contain;
		}
	}
	.quiz__options {
		width: 75%;
	}

	.quiz__label {
