@media screen and (max-width: 991.98px) {
	.container {
		max-width: 768px;
		padding-left: 10px;
		padding-right: 10px;
	}

	.header__ul {
		height: 75px;
	}

	.header__menu {
		display: flex;
	}

	.header__hamburger {
		display: flex;
		width: 30px;
		height: 30px;
	}

	.hamburger {
		z-index: 25;


		&_active {

			& span {
				height: 0;

				&::after {
					top: 0;
					transform: rotate(45deg);
					transition: transform 0.3s ease;
				}
				&::before {
					top: 0;
					transform: rotate(-45deg);
					transition: transform 0.3s ease;
				}
			}

		}


	}


	.header__li_mobile {
		width: 60vw;
		height: 50vh;
	}

	.header__mobile {
		display: none;
		flex-direction: column;
		position: absolute;
		right: 0;
		top: 0;
		z-index: 20;
		background: $dark-gradient;
		height: auto;
		width: 45vw;
		padding: 50px 25px;
		box-shadow: 0 10px 20px -10px $black-color;

		& li {
			margin-bottom: 7px;
		}

		&_active {
			display: flex;

		}

		& .header__li_arrow {
			&:hover, &:focus {
				& .header__submenu {
					display: flex;
					position: static;
					justify-content: space-between;
					width: 100%;
					height: auto;
					padding: 0;
					border: none;
					background-color: transparent;
					z-index: 3;
					align-items: center;
				}
			}
		}

		& .header__link {
			font-size: 1.4rem;

			&_arrow {
				align-self: center;
				padding-right: 0;
				width: 100%;

				& span {
					width: 100%;
					text-align: center;
					margin-bottom: 10px;
				}


			}
		}

		& .header__submenu {
			display: flex;
			flex-direction: column;
			align-items: center;
			margin-bottom: 10px;
			position: static;
			justify-content: space-between;
			width: 100%;
			height: auto;
			padding: 0;
			border: none;
			background-color: transparent;
			z-index: 3;

			&::before {
				position: absolute;
				content: '';
				left: 0;
				height: 0;
				width: 0;
				top: 0;
				z-index: -1;
			}
		}

		& .header__link_submenu {
			color: #FFFFFF;
			font-size: 1.3rem;
		}

	}

	.header__link_arrow {
		& svg {
			display: none;
		}
	}

	.header__row:nth-child(2) {
		flex-wrap: wrap;
		margin-top: 50px;
		width: 100%;
	}

	.header__card_second {
		//padding: 0;
		width: 45%;
		order: 2;
	}


	.header__text {
		margin: 0;
		order: 1;
	}

	.header__card_third {
		right: 0;
		order: 3;
		margin-top: -120px;
	}

	.header__info {
		padding-bottom: 40px;
	}

	.advantages {
		padding-top: 40px;
		padding-bottom: 40px;
		flex-direction: column;

		& .section__heading {
			//margin-bottom: 40px;
			line-height: 1.25;
		}

		& .left-side {
			margin-bottom: 25px;

		}

		& .left-side, & .right-side {
