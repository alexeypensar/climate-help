	.quiz__conditioner_3 {

		& .quiz__options_bottom {
			& .quiz__label, .quiz__input_text {
				width: 100%;
			}
		}

		& .quiz__input_text {
			width: 100%;
		}

		& .main-button {
			width: 250px;
		}

		& .quiz__checkbox {
			white-space: normal;
			width: 45%;
		}

		& .quiz__heading {
			white-space: normal;
			width: 80%;
		}
	}








