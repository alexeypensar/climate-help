		padding-bottom: 40px;
		flex-wrap: wrap;

		& .left-side, & .right-side {
			width: 100%;
		}

		& .left-top-side {
			height: auto;
			margin-bottom: 25px;
		}

		& .goods__category-price {
			margin-bottom: 15px;
		}

		& .goods__item_large {
			//padding: 20px;
		}
	}


	.goods__wrapper_services::before {
		display: none;
	}

	.goods__wrapper_services {
		background: $blue-gradient;
	}

	.services__heading_container .section__heading {
		top: 40px;
	}

	.services__container {
		padding-top: 90px;
		& .left-side, & .right-side {
			width: 100%;
		}

		& .right-side {
			order: 1;
			& .services__item:nth-of-type(even) {
				background-color: #f2f2f2;
			}
			& .services__item:nth-of-type(odd) {
