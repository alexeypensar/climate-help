.hamburger {
	width: 30px;
	height: 30px;
	position: absolute;
	top: 22px;
	right: 15px;
	border: none;
	outline: none;
	background-color: transparent;
	padding: 0;
	display: flex;
	justify-content: center;
	align-items: center;
	& span {
		width: 18px;
		height: 2px;
		background-color: #FFFFFF;
		vertical-align: middle;
		position: relative;
		border-radius: 5px;

		&::after {
			content: '';
			position: absolute;
			top: -6px;
			left: 0;
			width: 18px;
			height: 2px;
			background-color: #FFFFFF;
			border-radius: 5px;
			transform: rotate(0);
			transition: transform 0.3s ease;
		}

		&::before {
			content: '';
			position: absolute;
			top: 6px;
			left: 0;
			width: 18px;
			height: 2px;
			background-color: #FFFFFF;
			border-radius: 5px;
			transform: rotate(0);
			transition: transform 0.3s ease;
		}
	}

}

