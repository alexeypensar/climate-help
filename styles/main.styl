@import 'reset.css';
@import '__fonts.styl';
@import '__variables.styl';
@import '__helpers.styl';
@import '__animations.styl';
@import '__adaptive.styl';


html, body {
	font-family: 'Montserrat', sans-serif;
	font-size: 16px;
	font-weight: 400;
	color: $black-color;
	background-color: #FCFFFD;
}

.container {
	max-width: 1200px;
	margin: 0 auto;
	width: 100%;
	padding-left: 15px;
	padding-right: 15px;
}

.header__nav {
	background: $dark-gradient;
}

.header__ul {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	height: 106px;
}

.header__link {
	color: $gray-color;
	font-size: 14px;
	text-decoration: none;

	&_white {
		color: #FFFFFF;
		font-weight: 700;
		text-transform: uppercase;
		font-size: 26px;
		margin-right: 60px;
		position: relative;

		&::after {
			position: absolute;
			bottom: -30px;
			right: -35px;
			content: url('../img/icons/lifeline.svg');
		}
	}

	&_arrow {
		position: relative;
		margin-right: 20px;
		&::after {
			position: absolute;
			top: -2px;
			right: -20px;
			content: url('../img/icons/arrow-down.svg');
		}
	}
	&_red {
		color: $red-color;
	}
	&_phone {
		font-size: 20px;
		font-weight: 600;
		margin-left: 20px;
		margin-right: 15px;
	}
	&_blue {
		font-size: 1rem;
		color: $blue-color;
		padding-bottom: 5px;
		font-weight: 600;
		border-bottom: 2px solid $blue-color;
	}
}

