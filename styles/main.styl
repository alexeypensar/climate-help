.modal__card {
	min-width: 600px;
	width: auto;
	height: auto;
	background-color: #FFFFFF;
	padding: 40px 50px;
	border: 1px solid $gray-color;
	position: absolute;
	right: 0;
	top: 0;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
	z-index: 4;
	box-shadow: 0 0 25px -10px $boxshadow-color;
	display: none;

}

.modal__heading {
	font-weight: 500;
	font-size: 1.25rem;
	line-height: 150%;
	color: #DD5050;
	margin-bottom: 30px;
}

.modal__close {
	border: none;
	outline: none;
	position: absolute;
	top: 40px;
	right: 50px;
	background-color: transparent;
	display: flex;
	justify-content: center;
	align-items: center;
	width: 30px;
	height: 30px;
	padding: 0;
	& span {
		position: absolute;
		left: 9px;
		top: 45%;
		display: flex;
		width: 12px;
		height: 2px;
		border-radius: 2px;
		background-color: $darkergray-color;

		&:first-child {
			transform: rotate(45deg);
		}
		&:last-child {
			transform: rotate(-45deg);
		}
	}

	&:hover, &:focus {
		animation-name: close;
		animation-duration: 0.4s;
		animation-timing-function: ease-out;
		//animation-iteration-count: 1;
		animation-fill-mode: forwards;

		& span {
			background-color: $black-color;
		}
	}
}

