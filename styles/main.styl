@import 'reset.css';
@import '__fonts.styl';
@import '__variables.styl';
@import '__helpers.styl';
@import '__animations.styl';
@import '__adaptive.styl';


html, body {
	font-family: 'Montserrat', sans-serif;
	font-size: 16px;
	font-weight: 400;
	color: $black-color;
	background-color: #FCFFFD;
}

button:hover {
	cursor: pointer;
}

.container {
	max-width: 1200px;
	margin: 0 auto;
	width: 100%;
	padding-left: 15px;
	padding-right: 15px;
}

.header__nav {
	background: $dark-gradient;
}

.header__ul {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	height: 106px;
}

.header__link {
	color: $gray-color;
	font-size: 14px;
	text-decoration: none;

	&_white {
		color: #FFFFFF;
		font-weight: 700;
		text-transform: uppercase;
		font-size: 26px;
		margin-right: 60px;
		position: relative;

		&::after {
			position: absolute;
			bottom: -30px;
			right: -35px;
			content: url('../img/icons/lifeline.svg');
		}
	}

	&_arrow {
		position: relative;
		margin-right: 20px;
		&::after {
			position: absolute;
			top: -2px;
			right: -20px;
			content: url('../img/icons/arrow-down.svg');
		}
	}
	&_red {
		color: $red-color;
		font-weight: 600;
	}
	&_phone {
		font-size: 20px;
		font-weight: 600;
		margin-left: 20px;
		margin-right: 15px;
	}
	&_blue {
		font-size: 1rem;
		{$text-gradient};
		padding-bottom: 5px;
		font-weight: 600;
		position: relative;
		&::after {
			position: absolute;
			bottom: -2px;
			left: 0;
			width: 100%;
			height: 1px;
			background: $blue-gradient;
			content: '';
		}
	}
}

.header__info {
	padding-top: 70px;
	padding-bottom: 140px;
}

.header__row {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
}

.header__h1 {
	font-size: 44px;
	line-height: 140%;
	font-weight: 800;
	&_blue {
		{$text-gradient};
	}
}

//todo line-height поправить из процентов в нормальные величины


.header__card {
	position: relative;
	width: 490px;
	height: 200px;
	background-color: $gray-color;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: center;
	padding: 30px 20px 15px 20px;


	&_second {
		width: 431px;
		height: 390px;
		margin-top: -20px;
	}

	&_third {
		width: 300px;
		height: 234px;
		margin-top: 60px;
	}

	& h3 {
		line-height: 1;
		font-size: 16px;
		font-weight: 400;
		margin-right: 8px;
	}

	& p {
		line-height: 1;
		font-weight: 500;
		{$text-gradient};
	}
}

.header__card_bottom {
	display: flex;
	flex-direction: row;
	align-self: flex-start;
}

.button__arrow {
	position: absolute;
	bottom: 10px;
	right: 20px;
	border: 1px solid $blue-color;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
	height: 48px;
	width: 48px;
}

